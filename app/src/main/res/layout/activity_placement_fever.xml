<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.vibhav.vibhavee.vibhav.placement_fever">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        app:titleTextColor="#000"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:titleTextColor="#000"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/titleImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="#000"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>



    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.vibhav2k17.prajwal.vaibhav.placement_fever"
        tools:showIn="@layout/activity_placement_fever"
        android:id="@+id/nestedScrollView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="625dp"
                android:src="@drawable/texture"
                android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:background="#37322F"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:onClick="about"
                    android:text="ABOUT"
                    android:textColor="#FFF"
                    android:textSize="25dp"

                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:id="@+id/img"
                    android:src="@drawable/arrowoo"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="40dp"
                    android:background="#37322F"
                    android:onClick="about"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="24dp"
                    android:text="RULES"
                    android:onClick="rules"
                    android:layout_marginRight="4dp"
                    android:textSize="25dp"
                    android:background="#37322F"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/rules"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:src="@drawable/arrowoo"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="4dp"
                    android:background="#37322F"
                    android:onClick="rules"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:textSize="25dp"
                    android:textColor="#FFF"
                    android:fontFamily="sans-serif-condensed"
                    android:background="#37322F"
                    android:gravity="center"
                    android:text="JUDGING CRITERIA"
                    android:onClick="judgingCriteria"
                    android:id="@+id/judgingCriteria"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:src="@drawable/arrowoo"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="4dp"
                    android:background="#37322F"
                    android:onClick="judgingCriteria"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:text="PRIZES"
                    android:onClick="prizes"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:background="#37322F"
                    android:textSize="25dp"
                    android:id="@+id/prize"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:src="@drawable/arrowoo"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="4dp"
                    android:background="#37322F"
                    android:onClick="prizes"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:text="CONTACT US"
                    android:onClick="contactUs"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#FFF"
                    android:background="#37322F"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:id="@+id/contactUs"
                    android:layout_weight="1"

                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:src="@drawable/arrowoo"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="4dp"
                    android:background="#37322F"
                    android:onClick="contactUs"
                    />
            </LinearLayout>



        </LinearLayout>
        </RelativeLayout>



    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#D32F2F"
        android:id="@+id/register"
        android:fontFamily="monospace"
        android:gravity="center"
        android:onClick="register"
        android:text="REGISTER"
        android:textColor="#FFF"
        android:textSize="23dp"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="bottom|right" />
</android.support.design.widget.CoordinatorLayout>