<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/background"
    >


    <ViewFlipper
        android:autoStart="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/flipper1"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:onClick="fvfv"
                android:src="@drawable/i1"
                android:id="@+id/flip1"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:onClick="webliboxweb"
                android:src="@drawable/webli"
                android:id="@+id/flip6"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/i2"
                android:id="@+id/flip2"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/i3"
                android:id="@+id/flip3"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/i4"
                android:id="@+id/flip4"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>







    </ViewFlipper>

    <GridLayout

        android:layout_margin="30dp"
        android:id="@+id/maingridlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_below="@id/flipper1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">


        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="4dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hevents"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EVENTS"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:src="@drawable/htimetable"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TIME TABLE"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:src="@drawable/hworkshop"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GUEST LECTURE"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="4dp"
 >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/newfeed"
                    android:layout_marginTop="20dp"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NEWS FEED"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>
</RelativeLayout>
